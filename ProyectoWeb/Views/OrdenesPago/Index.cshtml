
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
   <div>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" rel="stylesheet" />

        <nav class="navbar navbar-expand-lg navbar-dark bg-success">
            <a class="navbar-brand" href="#">Problema N° 4</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation" style="">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Inicio <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Banco")">Bancos </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Sucursales")">Sucursales </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "OrdenesPago")">Ordenes Pago </a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" placeholder="Buscar" type="text">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Buscar</button>
                </form>
            </div>
        </nav>
        <div class="container body-content">
            <br />
            <a href="@Url.Action("Create", "OrdenesPago")">Agregar Orden Pago</a>
            <br /><br />
            <table cellpadding="2" cellspacing="2" border="1" class="table table-striped">
                <tr>
                    <th style="background-color:#28a745!important;color:white !important;display:none" >CodigoPago</th>
                    <th style="background-color:#28a745!important;color:white !important">Monto</th>
                    <th style="background-color:#28a745!important;color:white !important">Moneda</th>
                    <th style="background-color:#28a745!important;color:white !important">Estado</th>
                    <th style="background-color:#28a745!important;color:white !important">FechaPago</th>
                    <th style="background-color:#28a745!important;color:white !important">Sucursal</th>
                    <th style="background-color:#28a745!important;color:white !important">Id_Cliente</th>
                    <th style="background-color:#28a745!important;color:white !important">Opcion</th>
                </tr>
                @foreach (var ordenes in ViewBag.listOrdenesPago)
                {
                    <tr>
                        <td style="display:none">@ordenes.CodigoPago</td>
                        <td>@ordenes.Monto</td>
                        <td>@ordenes.Moneda_des</td>
                        <td>@ordenes.Estado_des</td>
                        <td>@ordenes.FechaPago</td>
                        <td>@ordenes.Sucursales </td>
                        <td>@ordenes.Id_Cliente </td>
                        <td>
                            <a href="@Url.Action("Delete", "Sucursales", new { CodigoPago = ordenes.CodigoPago })">Eliminar</a>
                        </td>
                    </tr>
                }
            </table>
            <hr />
            <footer>
                <p>&copy; 2019 - Elias Obeso Valverde</p>
            </footer>
        </div>
    </div>
</body>
</html>
